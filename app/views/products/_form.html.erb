 <% form_remote_for(product)  do |f|  %>
  <% field_set_tag 'Product Details' do %>
      <%= f.text_field :name %>
      <%= f.text_field :cost_price %>
      <%= f.text_field :weight %>
      <%= f.text_field :description %>
      <%= f.text_field :packaging %>
      <%= f.text_field :filename %>
      <%= f.text_field :order_code %>
      <%= f.submit_and_cancel('Save','Cancel') -%>
  <% end %>
<% end %>

<%= javascript_tag "observe_form_actions();" %>

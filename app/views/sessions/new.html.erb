<% form_tag session_path do -%>
<% field_set_tag 'login detail' do -%>
  <p class='clearfix'><%= label_tag 'login' -%><br />
  <%= text_field_tag 'login', @login -%></p>

  <p class='clearfix'><%= label_tag 'password' -%><br/>
  <%= password_field_tag 'password', nil -%></p>

  <p class='clearfix'><%= label_tag 'remember_me', 'Remember me' -%>
  <%= check_box_tag 'remember_me', '1', @remember_me -%></p>

  <p class='buttons'><%= submit_tag 'Log in' -%></p>
<% end -%>
<% end -%>


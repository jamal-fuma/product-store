<!-- list titles -->
  <%= bug_heading_helper :checkbox =>true, :id => 'toggle_bugs' %>

 <%  if(bugs && !bugs.empty?) %>
   <!-- list items -->
  <%= sortable_list(bugs,
        :url => @reorder_url,
        :group => 'all',
        :list_type => 'bugs'){ |bug|
          bug_row_helper(bug,:checkbox => true, :image =>:thumb)
        }%>

  <!-- pagination -->
  <div class="footer">
    <%= yield :bug_list_footer %>
    &nbsp;
  </div>
 <% else %> 
  <div id="all_bugs"></div>
 <% end %> 


<% form_remote_for(category)  do |f|  %>
  <% field_set_tag 'Category Details' do -%>
      <%= f.text_field :name -%>
      <%= f.select :parent_id, Category.to_list(),:label => 'Parent' %>
      <%= f.text_area :description %>
      <%= f.submit_and_cancel('Save','Cancel') -%>
  <% end -%>
<% end -%>

<%= javascript_tag "observe_form_actions();" %>
